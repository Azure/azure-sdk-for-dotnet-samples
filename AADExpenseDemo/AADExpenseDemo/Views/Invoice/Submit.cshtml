@model Microsoft.Online.Demos.Aadexpense.Models.Manager


@{
    ViewBag.Title = "Submit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Submit Your Expense Report</h2>

<script src="@Url.Content("https://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("https://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<p>Please pick your manager from the list below:</p>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Approval Form</legend>

        <div class="editor-label">
            Your Manager where this expense report will be submitted:
        <b>@Html.DisplayFor(model => model.ManagerName)</b>
        </div>

        <div class="editor-label">
            Comment to Manager About this submission
        </div>
        <div class="textarea-field">
            @Html.TextAreaFor(model => model.ManagerComment)
            @Html.ValidationMessageFor(model => model.ManagerComment)
        </div>

        <p>
            <input type="submit" value="Submit For Approval" />
        </p>
    </fieldset>
}


<div>
    @Html.ActionLink("Back to Invoices", "Index")
</div>